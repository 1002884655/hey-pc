.components {
  .Title {
    margin-top: 27px;
    width: 100%;
    display: block;
    font-size: 16px;
    font-weight: bold;
    line-height: 20px;
  }
  .FansList {
    >li {
      align-items: center;
      margin-top: 20px;
      .Icon {
        width: 48px;
        position: relative;
        a {
          width: 100%;
          display: block;
          padding-bottom: 100%;
          position: relative;
          overflow: hidden;
          border-radius: 100%;
          background: #eee;
        }
      }
      .Name {
        font-size: 12px;
        margin: 0 5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #000;
        &:hover {
          text-decoration: underline;
        }
      }
      i {
        font-size: 18px;
        color: #73C9FF;
        &.iconnv {
          color: #FF87C3;
        }
      }
      >a:last-child {
        width: 88px;
        text-align: center;
        margin-left: 5px;
        border-radius: 3px;
        line-height: 30px;
        color: #fff;
        background: #E2041B;
        font-size: 12px;
        &.Grey {
          background: #ccc;
          &:hover {
            cursor: default;
          }
        }
      }
    }
  }
  .Refresh {
    text-align: center;
    margin: 20px auto;
    a {
      width: 88px;
      text-align: center;
      border-radius: 3px;
      border: 1px solid #eee;
      line-height: 30px;
      display: inline-block;
      font-size: 12px;
      color: #ccc;
      transition: all .1s linear;
      -webkit-transition: all .1s linear;
      &:hover {
        background: #E2041B;
        color: #fff;
        border-color: #E2041B;
      }
    }
  }
}
