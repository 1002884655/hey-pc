.components {
  .ClassNavLevel2 {
    position: relative;
    overflow: hidden;
    font-size: 0;
    margin: 20px auto 0;
    a {
      font-size: 14px;
      line-height: 24px;
      vertical-align: middle;
      display: inline-block;
      margin-right: 20px;
      padding: 0 20px;
      &.active {
        background: #e2041b;
      }
      &.Filter {
        white-space: nowrap;
        font-size: 0;
        * {
          display: inline;
          vertical-align: middle;
          font-size: 14px;
          line-height: 24px;
        }
        span {
          margin-left: 5px;
        }
      }
    }
  }
  .ClassNavLevel3 {
    > li {
      margin: 10px auto 0;
      align-items: flex-start;
      &:first-child {
        margin: 20px auto 0;
      }
      > span {
        min-width: 86px;
        text-align: right;
        margin-right: 20px;
        font-size: 14px;
        line-height: 24px;
        color: #888;
      }
      > div {
        nav {
          font-size: 0;
          a {
            display: inline-block;
            vertical-align: middle;
            margin-right: 20px;
            line-height: 24px;
            font-size: 14px;
            padding: 0 15px;
            margin-bottom: 10px;
            &.active {
              background: #e2041b;
            }
          }
        }
      }
    }
  }
}
