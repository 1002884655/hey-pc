#app {
  .ImageCaptureBox {
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.8);
    > div {
      width: 680px;
      padding: 10px;
      background: #fff;
      border-radius: 5px;
      > div {
        > .flex-item {
          > div {
            .Title {
              width: 100%;
              position: relative;
              overflow: hidden;
              align-items: center;
              border-bottom: 1px solid #eee;
              padding: 10px 0;
              span {
                font-size: 16px;
                font-weight: bold;
                line-height: 20px;
              }
              a {
                font-size: 20px;
                line-height: 20px;
                margin-left: 15px;
                &:hover {
                  color: #e2041b;
                }
              }
            }
            .ImageCaptureContent {
              width: 100%;
              margin: 10px auto 0;
              position: relative;
              overflow: hidden;
              > div {
                width: 100%;
                padding-bottom: 80%;
                position: relative;
                overflow: hidden;
                height: 0;
                background: #eee;
                > div {
                  width: 100%;
                  overflow: hidden;
                  position: absolute;
                  left: 0;
                  top: 0;
                  bottom: 0;
                }
              }
              > span {
                width: 100%;
                display: block;
                font-size: 12px;
                color: #999;
                line-height: 18px;
                margin: 10px auto 0;
              }
            }
          }
        }
        > .Right {
          width: 150px;
          text-align: center;
          .Top {
            border-bottom: 1px solid #eee;
            text-align: right;
            padding: 10px 0;
            font-size: 0;
            a {
              display: inline-block;
              line-height: 20px;
              font-size: 20px;
              color: #ccc;
              &:hover {
                color: #e2041b;
              }
            }
          }
          > ul {
            li {
              margin: 10px auto 0;
              div {
                border-radius: 100%;
                position: relative;
                overflow: hidden;
                margin: 0 auto;
                background: #eee;
              }
              &:nth-child(1) {
                div {
                  width: 108px;
                  height: 108px;
                }
              }
              &:nth-child(2) {
                div {
                  width: 64px;
                  height: 64px;
                }
              }
              &:nth-child(3) {
                div {
                  width: 48px;
                  height: 48px;
                }
              }
              span {
                width: 100%;
                display: block;
                text-align: center;
                font-size: 12px;
                margin: 10px auto 0;
                padding-bottom: 10px;
              }
            }
          }
          > a {
            display: inline-block;
            font-size: 13px;
            color: #fff;
            line-height: 30px;
            background: #e2041b;
            padding: 0 10px;
            border-radius: 3px;
            margin: 10px auto 0;
          }
        }
      }
      .Bottom {
        text-align: center;
        font-size: 0;
        white-space: nowrap;
        padding: 20px 0;
        a {
          display: inline-block;
          vertical-align: middle;
          font-size: 13px;
          line-height: 30px;
          color: #fff;
          background: #ccc;
          width: 104px;
          text-align: center;
          border-radius: 3px;
          &:first-child {
            background: #e2041b;
            margin-right: 20px;
          }
        }
      }
    }
  }
  .Content {
    position: relative;
    overflow: visible;
    margin-top: 67px;
    padding: 20px 10%;
    .Left {
      width: 170px;
      position: relative;
      overflow: hidden;
      margin-right: 50px;
      .Icon {
        width: 106px;
        position: relative;
        overflow: hidden;
        margin: 0 auto;
        a {
          width: 100%;
          display: block;
          position: relative;
          overflow: hidden;
          border-radius: 100%;
          background: #ccc;
          padding-bottom: 100%;
        }
      }
      .Name {
        font-size: 0;
        white-space: nowrap;
        text-align: center;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-top: 20px;
        * {
          vertical-align: middle;
          display: inline-block;
          line-height: 20px;
          font-size: 16px;
          margin-left: 10px;
          &:first-child {
            margin: 0;
          }
        }
        span {
          font-weight: bold;
        }
      }
      > a {
        width: 100%;
        display: block;
        text-align: center;
        font-size: 12px;
        color: #fff;
        line-height: 30px;
        border-radius: 3px;
        margin-top: 20px;
        white-space: nowrap;
        background: #ccc;
      }
      > ul {
        margin-top: 20px;
        > li {
          align-items: center;
          margin-top: 10px;
          &:hover {
            cursor: pointer;
            * {
              color: #e2041b;
            }
          }
          i {
            font-size: 20px;
            color: #999;
            line-height: 30px;
            transition: margin-left 0.1s linear;
            -webkit-transition: margin-left 0.1s linear;
            margin-left: 0;
          }
          span {
            margin-left: 10px;
            font-size: 12px;
            color: #999;
            line-height: 30px;
          }
          &.active {
            background: #e2041b;
            border-radius: 3px;
            i,
            span {
              color: #fff;
            }
            i {
              margin-left: 10px;
            }
          }
        }
      }
    }
    .Right {
      > div {
        width: 100%;
        position: relative;
        overflow: hidden;
        > ul {
          width: 100%;
          position: relative;
          overflow: hidden;
          > li {
            width: 100%;
            position: relative;
            overflow: hidden;
          }
        }
      }
    }
  }
}
