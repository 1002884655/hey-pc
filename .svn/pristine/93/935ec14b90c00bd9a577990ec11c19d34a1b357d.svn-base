.components {
  width: 100%;
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  font-size: 0;
  a {
    display: inline-block;
    font-size: 16px;
    line-height: 26px;
    font-weight: bold;
    margin-right: 50px;
    vertical-align: middle;
    &.active {
      color: #e2041b;
    }
  }
  > div.ActiveLine {
    height: 2px;
    background: #e2041b;
    position: absolute;
    bottom: 0;
    transition: all 0.2s linear;
    -webkit-transition: all 0.2s linear;
    width: 0;
    left: 0;
  }
}
