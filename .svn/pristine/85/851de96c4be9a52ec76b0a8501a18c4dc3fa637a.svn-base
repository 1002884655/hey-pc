#app {
  background: rgba(0, 0, 0, 1);
  .MainContainer {
    width: calc(100% - 200px);
    min-width: 1000px;
    margin: 68px auto 0;
    padding-bottom: 30px;
    position: relative;
    overflow: visible;
    .PlayerContainer {
      padding-top: 30px;
      overflow: visible;
      > .flex-item {
        overflow: visible;
        .PlayerArea {
          width: 100%;
          padding-bottom: 56.25%;
          position: relative;
          overflow: visible;
          background: #666;
          > div {
            width: 100%;
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            overflow: visible;
            > div {
              width: 100%;
              height: 100%;
              position: static;
              overflow: hidden;
              background: #666;
              &.active {
                width: 400px;
                height: 225px;
                position: fixed;
                right: 18px;
                bottom: 10px;
                z-index: 1000;
                box-shadow: 0 0 15px 5px rgba(0, 0, 0, 0.1);
              }
              &.IsFullWindow {
                position: fixed;
                left: 0;
                top: 0;
                right: 0;
                bottom: 0;
                z-index: 10000;
              }
            }
          }
        }
        .BottomInfo {
          width: 100%;
          position: relative;
          overflow: hidden;
          white-space: nowrap;
          font-size: 0;
          background: #333;
          > * {
            display: inline-block;
            vertical-align: middle;
            font-size: 12px;
            color: #888;
            line-height: 38px;
            margin-left: 5px;
          }
          > *:first-child {
            margin-left: 20px;
          }
          i {
            font-size: 16px;
          }
          a {
            font-size: 0;
            white-space: nowrap;
            margin-left: 20px;
            * {
              display: inline-block;
              vertical-align: middle;
              font-size: 12px;
              color: #888;
              line-height: 38px;
            }
            i {
              font-size: 12px;
            }
            &:hover {
              * {
                color: #fff;
              }
            }
          }
        }
      }
      .PlayerRecommend {
        width: 24%;
        position: relative;
        overflow: hidden;
        margin-left: 30px;
        > .Title {
          align-items: center;
          > span {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            font-size: 30px;
            line-height: 40px;
            color: #fff;
            margin-right: 10px;
          }
          > a {
            width: 95px;
            text-align: center;
            white-space: nowrap;
            font-size: 0;
            background: #ccc;
            border-radius: 5px;
            &.active {
              background: #e2041b;
              &:hover {
                background: #f3041d;
              }
            }
            * {
              display: inline-block;
              vertical-align: middle;
              font-size: 12px;
              color: #fff;
              line-height: 32px;
            }
            i {
              margin-right: 5px;
            }
          }
        }
        > span {
          width: 100%;
          display: block;
          font-size: 18px;
          font-weight: bold;
          line-height: 20px;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          margin-top: 20px;
          margin-bottom: 10px;
        }
        > .flex-item {
          position: relative;
          overflow: hidden;
          > div {
            width: 100%;
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            overflow: hidden;
          }
        }
      }
    }
    .VideoMoreInfo {
      margin-top: 20px;
    }
    .RecommendAndComment {
      margin: 0 auto;
      position: relative;
      overflow: visible;
      align-items: flex-start;
      > .flex-item {
        position: relative;
        overflow: visible;
        .CommentListContainer {
          margin-top: 25px;
        }
      }
      .HotList {
        width: 24%;
        margin-left: 30px;
        position: relative;
        overflow: hidden;
        > .Title {
          align-items: center;
          padding: 15px 0;
          margin-top: 10px;
          > span {
            font-size: 18px;
            font-weight: bold;
            line-height: 20px;
          }
          > a {
            font-size: 10px;
            color: #888;
            &:hover {
              color: #fff;
            }
          }
        }
      }
    }
  }
  .ErrorContainer {
    width: calc(100% - 200px);
    min-width: 1000px;
    margin: 68px auto 0;
    padding-bottom: 30px;
    position: relative;
    overflow: visible;
  }
}
