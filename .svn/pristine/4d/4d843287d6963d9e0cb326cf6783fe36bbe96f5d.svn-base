@font-face {
  font-family: MyFont;
  src: url("../font/Arial.eot") url("https://static.heyporn.com/p/font/Arial.eot"); /* EOT file for IE */
}
@font-face {
  font-family: MyFont;
  src: url("../font/Arial.otf") url("https://static.heyporn.com/p/font/Arial.otf"); /* TTF file for CSS3 browsers */
}
@font-face {
  font-family: MyFont;
  src: url("../font/Arial.ttf") url("https://static.heyporn.com/p/font/Arial.ttf"); /* TTF file for CSS3 browsers */
}
html,
body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: relative;
  overflow: hidden;
  -webkit-touch-callout: none;
  // -webkit-user-select: none;
  -webkit-text-size-adjust: 100%;
  min-width: 800px;

  * {
    margin: 0;
    padding: 0;
    font-family: MyFont;
    -webkit-tap-highlight-color: rgba(255, 0, 0, 0);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    color: #fff;
    // &::-webkit-scrollbar {
    //   width: 8px;
    //   height: 0;
    //   background-color: rgba(255, 255, 255, 0.3);
    // }
    // &::-webkit-scrollbar-thumb {
    //   background-color: rgba(255, 255, 255, 0.5);
    //   border-radius: 8px;
    // }
    // &.WhitePage::-webkit-scrollbar {
    //   background-color: rgba(0, 0, 0, 0.3);
    // }
    // &.WhitePage::-webkit-scrollbar-thumb {
    //   background-color: rgba(0, 0, 0, 0.5);
    // }
  }

  a {
    text-decoration: none;
  }

  a:hover {
    cursor: pointer;
  }

  em {
    font-style: normal;
  }

  li {
    list-style: none;
  }

  img {
    border: 0;
    vertical-align: middle;
  }

  table {
    border-collapse: collapse;
    border-spacing: 0;
  }

  p {
    word-wrap: break-word;
  }

  input,
  button,
  a {
    outline: 0 none !important;
  }

  input,
  textarea {
    border: 0;
    -webkit-appearance: none;
  }

  input[type="input"] {
    -webkit-appearance: none;
  }

  input[type="checkbox"] {
    -webkit-appearance: checkbox;
  }

  input::-ms-clear {
    display: none;
  }

  input::-webkit-search-cancel-button {
    display: none;
  }

  input:focus,
  textarea:focus,
  select:focus {
    outline: none;
  }

  textarea {
    resize: none;
  }

  select {
    direction: rtl;
  }

  select option {
    direction: ltr;
  }

  .centerLabel {
    display: block;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
  }

  .flex-h {
    display: flex;
    display: -webkit-flex;
  }

  .flex-v {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    -webkit-flex-direction: column;
  }

  .flex-item {
    flex: 1;
    -webkit-flex: 1;
    position: relative;
    overflow: hidden;
  }

  .text-overflow-line1 {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

  .text-overflow-line2 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }

  .text-overflow-line3 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
  }

  .text-overflow-line4 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
  }

  .hide-scrollbar::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
    display: none;
  }

  img.cover {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  img.contain {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .MainPage {
    width: 100%;
    position: relative;
    z-index: 1;
  }

  .fullPage {
    width: 100%;
    height: 100vh;
    position: relative;
    overflow: hidden;
  }

  .scrollPage {
    width: 100%;
    height: 100%;
    position: relative;
    overflow-y: auto;
  }

  #app {
    width: 100%;
    height: 100%;
    min-width: 1100px;
    max-width: 5120px;
    position: relative;
    // overflow-y: scroll;
    // overflow-x: hidden;
    margin: 0 auto;
    &.WhitePage {
      background: #fff;
    }
  }

  .NoOpen {
    font-size: 20px;
    color: #888;
    font-weight: bold;
    width: 100%;
    display: block;
    text-align: center;
    line-height: 40px;
    margin-top: 20px;
  }
  .el-scrollbar__wrap {
    overflow-x: auto;
  }
  .el-scrollbar__thumb {
    background: rgba(255, 255, 255, 0.5);
    border-radius: 8px;
    &:hover {
      background: rgba(255, 255, 255, 0.7);
    }
  }
  .el-scrollbar__bar.is-vertical {
    width: 8px;
    background: rgba(255, 255, 255, 0.2);
    right: 0;
    top: 0;
    bottom: 0;
    border-radius: 0;
  }
  .el-select-dropdown__item {
    span {
      color: #000;
    }
  }
  .el-input__inner {
    line-height: 20px;
    padding: 7px 15px;
    height: 34px;
    border-color: #ccc;
    border-radius: 5px;
  }
  .el-input__icon {
    line-height: 34px;
  }
  .el-select {
    &.BigSelect {
      width: 340px;
    }
    &.SmallSelect {
      width: 160px;
    }
    &.LabelSelect {
      width: 100%;
    }
    .el-tag {
      background-color: #e2041b;
      * {
        color: #fff;
      }
    }
    .el-tag__close.el-icon-close {
      background: #fff;
      color: #e2041b;
      &:hover {
        background: #fff;
        color: #e2041b;
      }
    }
  }
  .el-notification__content {
    p {
      color: #000;
    }
  }
  .WhitePage {
    * {
      color: #000;
    }
    .el-scrollbar__bar.is-vertical {
      background: rgba(0, 0, 0, 0.2);
    }
    .el-scrollbar__thumb {
      background: rgba(0, 0, 0, 0.5);
      border-radius: 8px;
      &:hover {
        background: rgba(0, 0, 0, 0.7);
      }
    }
  }
}
