#app {
  .Container {
    padding: 108px 5% 0;
    position: relative;
    overflow: visible;
    .Error {
      align-items: center;
      > .flex-item {
        span {
          display: block;
          text-align: center;
          font-weight: bold;
          color: #999;
          font-size: 16px;
          line-height: 20px;
          margin-top: 20px;
          &:first-child {
            font-size: 80px;
            color: #000;
            line-height: 100px;
            margin: 0 auto;
          }
        }
      }
      .RecommendVideo {
        width: 40%;
        position: relative;
        overflow: hidden;
        margin-left: 20px;
        > span {
          display: block;
          line-height: 20px;
          font-size: 16px;
          font-weight: bold;
        }
        > .Video {
          width: 100%;
          position: relative;
          overflow: hidden;
          padding-bottom: 56.25%;
          background: #eee;
          margin: 20px auto 0;
          img {
            z-index: 1;
          }
          a {
            display: inline-block;
            position: absolute;
            z-index: 2;
            line-height: 36px;
            width: 36px;
            text-align: center;
            border-radius: 100%;
            background: rgba(0, 0, 0, 0.3);
            color: #fff;
            &:hover {
              color: #e2041b;
            }
          }
        }
      }
      .Bottom {
        text-align: center;
        font-size: 0;
        white-space: nowrap;
        margin: 30px auto 0;
        a {
          display: inline-block;
          vertical-align: middle;
          font-size: 12px;
          line-height: 30px;
          width: 136px;
          text-align: center;
          background: #999;
          border-radius: 3px;
          margin-left: 30px;
          color: #fff;
          &:first-child {
            margin-left: 0;
            background: #e2041b;
          }
        }
      }
    }
    .PopVideo {
      margin: 60px auto 0;
      > span {
        display: block;
        line-height: 20px;
        font-size: 16px;
        font-weight: bold;
      }
      > ul {
        border-top: 1px solid #eee;
        margin-top: 10px;
        align-items: center;
        padding-top: 15px;
        > li {
          position: relative;
          overflow: hidden;
          margin-left: 20px;
          &:first-child {
            margin-left: 0;
          }
          > a.Img {
            width: 100%;
            display: block;
            padding-bottom: 56.25%;
            background: #eee;
            position: relative;
            overflow: hidden;
            img {
              z-index: 1;
            }
            a {
              display: inline-block;
              position: absolute;
              z-index: 2;
              line-height: 36px;
              width: 36px;
              text-align: center;
              border-radius: 100%;
              background: rgba(0, 0, 0, 0.3);
              color: #fff;
              &:hover {
                color: #e2041b;
              }
            }
          }
          .Name {
            font-size: 12px;
            display: block;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            line-height: 20px;
            font-weight: bold;
            margin: 5px auto 0;
          }
          .flex-h {
            align-items: center;
            span {
              font-size: 12px;
              color: #999;
              line-height: 20px;
              &.flex-item {
                margin-right: 10px;
              }
            }
          }
        }
      }
    }
  }
}
