.components {
  .Title {
    align-items: center;
    span {
      font-size: 18px;
      line-height: 20px;
    }
    a {
      font-size: 12px;
      color: #888;
      &:hover {
        color: #fff;
      }
    }
  }
  > .flex-item {
    margin-top: 20px;
    position: relative;
    > div {
      width: 100%;
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      overflow-y: auto;
      > ul {
        > li {
          margin-top: 10px;
          &:first-child {
            margin: 0;
          }
          > .Img {
            width: 42%;
            position: relative;
            overflow: hidden;
            a {
              width: 100%;
              display: block;
              position: relative;
              overflow: hidden;
              padding-bottom: 56.25%;
              border-radius: 5px;
              background: #1a1a1a;
              img {
                z-index: 1;
              }
              i {
                z-index: 2;
                display: none;
                line-height: 40px;
                width: 40px;
                text-align: center;
                border-radius: 100%;
                background: rgba(0, 0, 0, 0.5);
                color: #fff;
                &:hover {
                  color: #e2041b;
                }
              }
              &:hover {
                i {
                  display: inline-block;
                }
              }
            }
          }
          > .flex-item {
            margin-left: 10px;
            > div {
              > a {
                width: 100%;
                display: block;
                overflow: hidden;
                text-overflow: ellipsis;
                display: -webkit-box;
                -webkit-box-orient: vertical;
                -webkit-line-clamp: 2;
                line-height: 18px;
                font-size: 14px;
                height: 39px;
                word-break: break-all;
                color: #fff;
                &:hover {
                  text-decoration: underline;
                }
              }
              div {
                white-space: nowrap;
                font-size: 0;
                * {
                  display: inline-block;
                  vertical-align: middle;
                  margin-right: 10px;
                  font-size: 14px;
                  color: #888;
                  line-height: 18px;
                }
                a:hover {
                  color: #fff;
                }
              }
            }
          }
        }
      }
    }
  }
}
