.components {
  ul {
    font-size: 0;
    li {
      width: 120px;
      display: inline-block;
      position: relative;
      overflow: hidden;
      vertical-align: middle;
      margin-bottom: 10px;
      margin-right: 10px;
      > div {
        align-items: center;
        .Icon {
          width: 48px;
          height: 48px;
          position: relative;
          overflow: hidden;
          background: #1a1a1a;
          border-radius: 100%;
          margin-right: 5px;
        }
        > .flex-item {
          > div {
            > * {
              width: 100%;
              display: block;
              font-size: 10px;
              white-space: nowrap;
              text-overflow: ellipsis;
              overflow: hidden;
              color: #888;
              line-height: 20px;
              &:first-child {
                font-size: 12px;
                color: #fff;
              }
            }
            a:hover {
              text-decoration: underline;
            }
          }
        }
      }
    }
  }
}
