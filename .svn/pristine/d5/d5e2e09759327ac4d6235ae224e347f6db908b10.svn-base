.components.SearchFilter {
  .NavLevel2List {
    white-space: nowrap;
    font-size: 0;
    margin-top: 20px;
    > a {
      display: inline-block;
      vertical-align: middle;
      font-size: 14px;
      line-height: 24px;
      padding: 0 10px;
      margin-right: 20px;
      &.active,
      &:hover {
        background: #e2041b;
      }
    }
  }
  .NavLevel3List {
    > li {
      align-items: flex-start;
      > span {
        font-size: 14px;
        color: #888;
        line-height: 24px;
        margin-top: 20px;
        min-width: 85px;
      }
      > div {
        font-size: 0;
        > a {
          display: inline-block;
          margin-top: 20px;
          font-size: 14px;
          line-height: 24px;
          vertical-align: middle;
          margin-right: 20px;
          padding: 0 10px;
          &.active,
          &:hover {
            background: #e2041b;
          }
        }
      }
    }
  }
}
