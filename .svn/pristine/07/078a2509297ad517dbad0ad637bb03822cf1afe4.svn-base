.components {
  width: 100%;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  bottom: 0;
  color: #000;
  // a {
  //   color: #000;
  // }
  > .Layer {
    width: 100%;
    position: absolute;
    height: 100%;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.4);
  }
  > div.centerLabel {
    width: 508px;
    min-height: 505px;
    background: rgba(255, 255, 255, 1);
    padding: 20px;
    z-index: 1001;
    > .Type {
      align-items: center;
      color: #e2041b;
      font-size: 18px;
      line-height: 25px;
      a {
        color: #000;
        &:hover {
          color: #e2041b;
        }
      }
      > span {
        margin-right: 20px;
      }
      > div {
        position: relative;
        &::after {
          content: "";
          width: 1px;
          height: 20px;
          top: 50%;
          transform: translateY(-50%);
          -webkit-transform: translateY(-50%);
          background: #e2041b;
          display: block;
          position: absolute;
          left: 0;
        }
        span {
          display: block;
          text-indent: 21px;
        }
      }
    }
    > .Form {
      padding: 0 110px;
      position: relative;
      overflow: visible;
      > div {
        position: relative;
        overflow: visible;
        > span.Line {
          width: 100%;
          display: block;
          color: #797979;
          font-size: 14px;
          line-height: 20px;
          margin: 20px auto 0;
          a {
            font-size: 12px;
            line-height: 18px;
            text-decoration: underline;
          }
          &.center {
            text-align: center;
          }
          &.Big {
            font-size: 24px;
            line-height: 33px;
            color: #00e702;
          }
        }
        > .FormItemName {
          width: 100%;
          display: block;
          line-height: 22px;
          font-size: 16px;
          margin-top: 25px;
          font-weight: bolder;
        }
        > .FormInput {
          align-items: center;
          position: relative;
          overflow: visible;
          border-bottom: 1px solid #000;
          margin-top: 10px;
          input {
            width: 100%;
            border: none;
            background: none;
            line-height: 17px;
            font-size: 14px;
            display: block;
            padding: 10px 0;
            color: #000;
            &::placeholder {
              font-size: 12px;
            }
          }
          .AlertText {
            width: 100px;
            display: none;
            position: absolute;
            right: -100px;
            font-size: 12px;
            color: #e2041b;
            line-height: 20px;
            &.Below {
              right: 0;
              width: 100%;
              bottom: -25px;
            }
            &.active {
              display: inline-block;
            }
          }
        }
        > span.Btn {
          display: block;
          padding: 0 10px;
          a {
            width: 100%;
            text-align: center;
            line-height: 40px;
            color: #fff;
            background: #e2041b;
            border-radius: 4px;
            display: block;
            margin-top: 20px;
            font-size: 18px;
          }
        }
        > .CutLine {
          position: relative;
          overflow: hidden;
          text-align: center;
          margin-top: 15px;
          &::after {
            content: "";
            width: 100%;
            height: 1px;
            display: block;
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            -webkit-transform: translateY(-50%);
            background: #979797;
            z-index: 1;
          }
          > span {
            line-height: 20px;
            font-size: 12px;
            color: #000;
            display: inline-block;
            position: relative;
            z-index: 2;
            padding: 0 15px;
            background: #fff;
          }
        }
        > .OtherLogin {
          white-space: nowrap;
          font-size: 0;
          text-align: center;
          margin-top: 15px;
          > a {
            display: inline-block;
            vertical-align: middle;
            font-size: 30px;
            margin-left: 30px;
            height: 30px;
            width: 30px;
            position: relative;
            &:first-child {
              margin: 0;
            }
            &.Colours {
              color: #028fc4;
            }
          }
        }
      }
    }
    .Bottom {
      width: 100%;
      position: absolute;
      overflow: visible;
      height: 20px;
      bottom: 20px;
      left: 0;
      text-align: right;
      font-size: 0;
      white-space: nowrap;
      a {
        display: inline-block;
        line-height: 20px;
        color: #666;
        vertical-align: middle;
        text-decoration: underline;
        font-size: 16px;
        margin-right: 20px;
      }
    }
  }
}
