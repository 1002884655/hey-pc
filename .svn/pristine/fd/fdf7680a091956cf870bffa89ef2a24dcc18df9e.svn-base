.components {
  border-top: 1px solid #eee;
  margin-top: 10px;
  > ul {
    > li {
      padding: 20px 0;
      > div {
        > div {
          width: 100%;
          position: relative;
          overflow: hidden;
          text-align: center;
          white-space: nowrap;
          font-size: 0;
          * {
            display: inline-block;
            font-size: 14px;
            line-height: 28px;
            vertical-align: middle;
          }
          span:only-child {
            color: #ccc;
          }
          i {
            font-size: 22px;
            + span {
              width: 80px;
              text-align: left;
              margin-left: 10px;
            }
          }
          a {
            width: 112px;
            display: inline-block;
            text-align: center;
            background: #e2041b;
            border-radius: 3px;
            color: #fff;
          }
        }
      }
    }
  }
  .SetItem {
    position: relative;
    overflow: hidden;
    > span {
      width: 100%;
      display: block;
      line-height: 20px;
      font-size: 12px;
      font-weight: bold;
      padding: 20px 0;
    }
    > div {
      position: relative;
      overflow: hidden;
      > div {
        text-align: center;
        > input {
          width: 380px;
          display: block;
          border: 1px solid #ccc;
          border-radius: 3px;
          line-height: 20px;
          font-size: 12px;
          padding: 5px;
          margin: 0 auto;
          &::placeholder {
            color: #999;
          }
        }
        > span {
          width: 392px;
          display: block;
          font-size: 12px;
          color: #e2041b;
          text-align: left;
          line-height: 20px;
          height: 20px;
          margin: 0 auto;
          a {
            color: #e2041b;
            margin: 0 10px;
            font-weight: normal;
            &:hover {
              text-decoration: underline;
            }
          }
          span {
            color: #e2041b;
            font-weight: normal;
          }
        }
        > a {
          line-height: 30px;
          width: 148px;
          display: inline-block;
          color: #fff;
          border-radius: 3px;
          font-size: 12px;
          background: #e2041b;
          margin-top: 20px;
        }
      }
    }
  }
}
