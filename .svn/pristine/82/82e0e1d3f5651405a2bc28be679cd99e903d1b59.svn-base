.components {
  width: 100%;
  height: 100%;
  position: relative;
  .Title {
    align-items: center;
    > .flex-item {
      margin-right: 10px;
      > div {
        span {
          width: 100%;
          display: block;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          font-size: 30px;
          line-height: 32px;
        }
      }
    }
    a {
      width: 100px;
      white-space: nowrap;
      font-size: 0;
      background: #e2041b;
      border-radius: 3px;
      text-align: center;
      * {
        display: inline-block;
        vertical-align: middle;
        font-size: 12px;
        line-height: 32px;
      }
      i {
        margin-right: 5px;
      }
      // &.Grey {
      //   background: #ccc;
      // }
    }
  }
  .List {
    margin-top: 20px;
  }
}
