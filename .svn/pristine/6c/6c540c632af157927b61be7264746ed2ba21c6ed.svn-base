.videoContent {
  .video-js {
    .VideoLayer {
      width: 100%;
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      z-index: 1;
      overflow: hidden;

      .BigPlayBtn,
      .BigPauseBtn {
        width: 80px;
        height: 80px;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 100%;
        transform: translate(-50%, -50%) scale(1, 1);
        -webkit-transform: translate(-50%, -50%) scale(1, 1);
        opacity: 0;
        i {
          font-size: 30px;
          color: rgba(255, 255, 255, 1);
        }
      }
      .BigPlayBtn {
        &.active {
          animation: ScaleAnimation1 0.1s linear;
          -webkit-animation: ScaleAnimation1 0.1s linear;
          animation-iteration-count: 1;
          -webkit-animation-iteration-count: 1;
          animation-fill-mode: forwards;
          -webkit-animation-fill-mode: forwards;
        }
      }
      .BigPauseBtn {
        &.active {
          animation: ScaleAnimation 0.2s linear;
          -webkit-animation: ScaleAnimation 0.2s linear;
          animation-iteration-count: 1;
          -webkit-animation-iteration-count: 1;
          animation-direction: normal;
          -webkit-animation-direction: normal;
        }
      }
    }
    .vjs-control-bar {
      background: rgba(0, 0, 0, 0.8);
      height: 40px;
      z-index: 10;
      overflow: visible;
      align-items: center;
    }
  }
}
