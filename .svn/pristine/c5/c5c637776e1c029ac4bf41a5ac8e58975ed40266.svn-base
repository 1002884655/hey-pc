.components {
  width: 100%;
  position: relative;
  overflow: hidden;
  border-top: 1px solid #eee;
  margin-top: 10px;
  .Top {
    padding: 20px;
    position: relative;
    overflow: hidden;
    align-items: center;
    .Icon {
      width: 88px;
      position: relative;
      overflow: hidden;
      margin-right: 20px;
      .Img {
        width: 100%;
        position: relative;
        overflow: hidden;
        display: block;
        padding-bottom: 100%;
        height: 0;
        background: #ccc;
        border-radius: 100%;
        + a {
          width: 62px;
          display: block;
          margin: 10px auto 0;
          text-align: center;
          color: #fff;
          line-height: 22px;
          border-radius: 3px;
          background: #ccc;
          font-size: 10px;
        }
      }
    }
    > ul {
      margin-top: -16px;
      margin-right: 10px;
      li {
        line-height: 30px;
        font-size: 12px;
      }
    }
    > .flex-item {
      margin-top: -16px;
      > div {
        position: relative;
        overflow: hidden;
        > div {
          height: 30px;
          position: relative;
          overflow: hidden;
          > div {
            white-space: nowrap;
            font-size: 0;
            > * {
              line-height: 30px;
              font-size: 12px;
              vertical-align: middle;
              display: inline-block;
            }
            a.iconfont {
              font-size: 16px;
              margin-left: 5px;
              transition: all 0.1s linear;
              -webkit-transition: all 0.1s linear;
              &:hover {
                color: #e2041b;
              }
            }
            input {
              line-height: 18px;
              padding: 5px;
              border: 1px solid #eee;
              border-radius: 3px;
              + a {
                width: 62px;
                text-align: center;
                line-height: 30px;
                border-radius: 3px;
                background: #ccc;
                color: #fff;
                margin-left: 10px;
                transition: all 0.1s linear;
                -webkit-transition: all 0.1s linear;
                &:hover {
                  background: #e2041b;
                }
              }
            }
          }
        }
      }
    }
  }
  .Form {
    border-top: 1px solid #eee;
    padding: 20px 0;
    position: relative;
    overflow: hidden;
    > ul {
      width: 100%;
      max-width: 1000px;
      > li {
        width: 100%;
        position: relative;
        overflow: hidden;
        margin-top: 20px;
        &:first-child {
          margin-top: 0;
        }
        > span {
          width: 100px;
          text-align: right;
          font-size: 12px;
          line-height: 34px;
          margin-right: 50px;
          font-weight: bold;
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
        }
        > div.flex-item {
          > div {
            position: relative;
            overflow: hidden;
            input {
              width: 100%;
              box-sizing: border-box;
              border: 1px solid #ccc;
              border-radius: 3px;
              line-height: 20px;
              padding: 6px;
              font-size: 13px;
              &::placeholder {
                color: #ccc;
              }
            }
            textarea {
              width: 100%;
              box-sizing: border-box;
              border: 1px solid #ccc;
              border-radius: 3px;
              line-height: 20px;
              padding: 6px;
              font-size: 13px;
              &::placeholder {
                color: #ccc;
              }
            }
          }
        }
      }
    }
  }
  .Submit {
    max-width: 1000px;
    padding: 20px 0;
    text-align: center;
    position: relative;
    overflow: hidden;
    a {
      display: inline-block;
      width: 200px;
      text-align: center;
      font-size: 16px;
      color: #fff;
      background: #e2041b;
      border-radius: 3px;
      line-height: 32px;
    }
  }
}
